{% extends 'base.html.twig' %}

{% block title %}Hello Departments!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Departments! âœ…</h1>
    <a class="btn btn-warning mb-4 mt-3" href="/addnewdept">Add new dep</a>
    <a class="btn btn-warning mb-4 mt-3" href="/">Employees</a>

    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Dept name</th>


        </tr>
        </thead>
        <tbody>
        {% for departments in departments %}
            <tr>

                <th scope="row">{{ departments.id }}</th>
                <td>{{ departments.deptname }}</td>


                <td><a class="btn btn-info" href="{{ path('editDept', {'id': departments.id}) }}">Update</a> </td>
                <td><a class="btn btn-danger" data-id="{{ departments.id }}" href="{{ path('deleteDept', {'id': departments.id}) }}">Delete</a></td>

            </tr>
        {% endfor %}

        </tbody>
    </table>
</div>
{% endblock %}
